{
    "keyboard_name": "k11e1",
    "maintainer": "aineejames",
    "manufacturer": "aineejames",
    "url": "",
    "bootloader_instructions": "Press the reset button while holding the boot button.",
    "tags": ["macropad"],

    "bootloader": "rp2040",
    "processor": "RP2040",

    "build": {
        "firmware_format": "uf2",
        "lto": true
    },

    "features": {
        "nkro": true,
	    "encoder": true,
        "extrakey": true,
        "mousekey": true,
	    "rgb_matrix": true,
	    "bootmagic": true,
    },

    "encoder": {
        "rotary": [
	        {
		        "pin_a": "GP4",
		        "pin_b": "GP3",
		        "resolution": 2,
		    }
	    ]
    },

    "bootmagic": {
        "enabled": true,
        "matrix": [2, 3],
    },

    "rgb_matrix": {
        "animations": {
            "pixel_flow": true,
            "band_pinwheel_val": true,
        },
        "center_point": [1, 2],
        "driver": "ws2812",
        "layout": [
            { "matrix": [0, 1], "x": 1, "y": 0, "flags": 4 },
            { "matrix": [0, 2], "x": 2, "y": 0, "flags": 4 },
            { "matrix": [0, 3], "x": 3, "y": 0, "flags": 4 },

            { "matrix": [1, 0], "x": 3, "y": 1, "flags": 4 },
            { "matrix": [1, 1], "x": 2, "y": 1, "flags": 4 },
            { "matrix": [1, 2], "x": 1, "y": 1, "flags": 4 },
            { "matrix": [1, 3], "x": 0, "y": 1, "flags": 4 },

            { "matrix": [2, 0], "x": 0, "y": 2, "flags": 4 },
            { "matrix": [2, 1], "x": 1, "y": 2, "flags": 4 },
            { "matrix": [2, 2], "x": 2, "y": 2, "flags": 4 },
            { "matrix": [2, 3], "x": 3, "y": 2, "flags": 4 },
        ]
    },
    "ws2812": {
	    "pin": "GP1",
	    "driver": "vendor"
    },

    "matrix_pins": {
        "cols": ["GP29", "GP28", "GP27", "GP26"],
        "rows": ["GP6", "GP7", "GP0"],
        "custom_lite": true,
    },
    "diode_direction": "COL2ROW",

    "usb": {
        "device_version": "1.0.0",
        "vid": "0x616A"
        "pid": "0x0005",
    },

    "layouts": {
        "LAYOUT_ortho_4x3": {
            "layout": [
                { "label": "k00", "matrix": [0, 0], "x": 0, "y": 0 },
                { "label": "k01", "matrix": [0, 1], "x": 1, "y": 0 },
                { "label": "k02", "matrix": [0, 2], "x": 2, "y": 0 },
                { "label": "k03", "matrix": [0, 3], "x": 3, "y": 0 },

                { "label": "k04", "matrix": [1, 0], "x": 0, "y": 1 },
                { "label": "k05", "matrix": [1, 1], "x": 1, "y": 1 },
                { "label": "k06", "matrix": [1, 2], "x": 2, "y": 1 },
                { "label": "k07", "matrix": [1, 3], "x": 3, "y": 1 },

                { "label": "k08", "matrix": [2, 0], "x": 0, "y": 2 },
                { "label": "k09", "matrix": [2, 1], "x": 1, "y": 2 },
                { "label": "k10", "matrix": [2, 2], "x": 2, "y": 2 },
                { "label": "k11", "matrix": [2, 3], "x": 3, "y": 2 }
            ]
        }
    }
}
